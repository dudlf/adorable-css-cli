{
  "name": "adorable-css",
  "version": "1.1.4",
  "description": "Rapid On-Demand Atomic CSS generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/developer-1px/adorable-css"
  },
  "bin": {
    "adorable-css": "bin/bin.js"
  },
  "homepage": "https://developer-1px.github.io/adorable-css/",
  "keywords": [
    "css",
    "functional css",
    "atomic css",
    "utility first",
    "ondemand",
    "figma",
    "handoff",
    "vite"
  ],
  "author": "teo.yu",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build -- --watch src",
    "build": "rm -rf ./dist && npm run build:vite && npm run build:cli",
    "build:vite": "tsup ./src/vite/index.ts ./src/index.ts --dts -d ./dist",
    "build:cli": "tsup ./src/node/cli.ts --dts -d ./dist/node",
    "deploy": "npm run build && cp package.json ./dist/package.json && mkdir -p dist/bin && cp -r bin dist && cd dist && npm publish"
  },
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./vite": {
      "require": "./vite/index.js",
      "import": "./vite/index.js",
      "types": "./vite/index.d.ts"
    }
  }
}
